<?xml version="1.0" encoding="utf-8"?>

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <system.webServer>
    <rewrite xdt:Transform="Insert">
      <rules>
        <rule name="Force HTTPS" enabled="true">
          <match url="(.*)" ignoreCase="false" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" appendQueryString="true" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>

    <staticContent xdt:Transform="Insert">
      <mimeMap fileExtension=".text" mimeType="text/plain" />
      <mimeMap fileExtension=".m4a" mimeType="audio/mp4a-latm" />
      <mimeMap fileExtension=".woff" mimeType="application/x-font-woff" />
    </staticContent>
  </system.webServer>

  <appSettings>
    <add key="config:MongoDBServer" value="mongodb://172.16.0.4" xdt:Transform="Replace" xdt:Locator="Condition(@key='config:MongoDBServer')"/>
    <add key="config:MongoDBDatabase" value="AirSideEncore" xdt:Transform="Replace" xdt:Locator="Condition(@key='config:MongoDBDatabase')"/>
  </appSettings>
  
  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
  </system.web>
</configuration>