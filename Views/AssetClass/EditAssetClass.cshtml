@if (ViewBag.error != "")
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @ViewBag.error
    </div>
}

<div id="content">
    <div class="row ">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa-fw fa fa-th"></i>
                Asset Types <span>
                    >
                    Edit Asset Type
                </span>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6">
            <form id="checkout-form" class="smart-form" novalidate="novalidate">

                <fieldset>
                    <div class="row">
                        <section class="col col-6">
                            <label>Asset Description</label>
                            <label class="input">
                                <i class="icon-prepend fa fa-pencil-square-o"></i>
                                <input type="text" name="description" id="description" placeholder="Description" class="invalid" value="@ViewBag.description">
                            </label>

                        </section>
                        <section class="col col-6">
                            <label>Manufacturer</label>
                            <label class="input">
                                <i class="icon-prepend fa fa-wrench"></i>
                                <input type="text" name="manufacturer" id="manufacturer" placeholder="Manufacturer" class="invalid" value="@ViewBag.manufacturer">
                            </label>
                        </section>
                    </div>

                    <div class="row">
                        <section class="col col-6">
                            <label>Model</label>
                            <label class="input">
                                <i class="icon-prepend fa fa-cube"></i>
                                <input type="text" name="model" id="model" placeholder="Model" class="invalid" value="@ViewBag.model">
                            </label>
                        </section>
                        <section class="col col-6">
                            <label>Asset Picture</label>
                            <div id="assetPic" class="dd-container" style="display:none;"></div>
                            <img src="~/content/img/adb_img/adb_loader.gif" id="adbloader" style="zoom:0.5;" />
                            <div class="note">
                                <strong>Hint: </strong> You can load up additional images into the library.
                            </div>

                        </section>
                        @*<section class="col col-6">
                                <label id="frequencyLbl"><i class="fa fa-history"></i> Maintenance Frequency (---)</label>
                                <img src="~/content/img/adb_img/adb_loader.gif" id="adbloader2" style="zoom:0.5;" />
                                <div id="frequencySlider"></div>
                                <div class="note">
                                    <strong>Hint: </strong> This is the maintenance frequency in days. Add more <a href="~/AssetClass/AddFrequency">here.</a>
                                </div>
                            </section>*@
                    </div>
                </fieldset>
            </form>



            <hr />
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <h2 class="page-title"><i class="fa fa-wrench"></i> Assosiated Maintenance Tasks</h2>
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-align-right">
                    <button id="addTaskBtn" class="btn btn-default page-title"><i class="fa fa-plus"></i> Add Maintenance Task</button>
                </div>
            </div>

            <table id="dt_maintenanceTasks" class="table table-striped table-bordered table-hover" width="100%">
                <thead>
                    <tr>
                        <th data-class="expand"><i class="fa fa-fw fa-wrench txt-color-blue hidden-md hidden-sm hidden-xs"></i> Maintenance Task</th>
                        <th data-class="expand"><i class="fa fa-fw fa-history txt-color-blue hidden-md hidden-sm hidden-xs"></i> Frequency</th>
                        <th data-class="expand"><i class="fa fa-fw fa-eye txt-color-blue hidden-md hidden-sm hidden-xs"></i> Validation</th>
                        <th><i class="fa fa-fw fa-cogs txt-color-blue hidden-md hidden-sm hidden-xs"></i> Options</th>
                    </tr>
                </thead>
                <tbody></tbody>

            </table>
            <img id="adbloader4" src="~/content/img/adb_img/adb_loader.gif" />
            <hr />
            <form class="smart-form">
                <footer>
                    <a class="btn btn-danger" id="backBtn"><i class="fa fa-arrow-left"></i> Go Back</a>
                    <a id="createBtn" class="btn btn-success"><i class="fa fa-pencil-square-o"></i> Edit Asset Type</a>
                </footer>
            </form>
            <div class="row">
                <div class="col-md-12 text-align-right">
                    <img src="~/content/img/adb_img/adb_loader.gif" id="adbloader3" style="zoom:0.7; display:none;" />
                </div>
            </div>

        </div>
    </div>

    <!--Modal for add Technician Shift-->
    <div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="techModalLabel"><i class="fa fa-wrench txt-color-blueDark"></i> Add Maintenance Task</h4>
                </div>
                <div class="modal-body">
                    <form class="smart-form">
                        <div class="row">
                            <fieldset>
                                <div class="col-11">
                                    <div class="form-group">
                                        <label>Select the Task</label>
                                        <select multiple style="width:100%" class="select2" id="taskSelect"></select>
                                    </div><br />

                                    <hr /><br />

                                    <div class="form-group">
                                        <label>Select the Validation Tasks</label>
                                        <select multiple style="width:100%" class="select2" id="validationSelect"></select>
                                    </div><br />                                  

                                    <hr /><br />

                                    <div class="form-group">
                                        <label id="frequencyLbl"><i class="fa fa-history"></i> Maintenance Frequency (---)</label>
                                        <img src="~/Content/img/adb_img/adb_loader.GIF" id="adbloader2" style="zoom:0.5;" />
                                        <div id="frequencySlider"></div>
                                        <div class="note">
                                            <strong>Hint: </strong> This is the maintenance frequency in days. Add more <a href="~/AssetClass/AddFrequency">here.</a>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <img src="~/Content/img/adb_img/adb_loader_tr.gif" id="modalLoader" style="height:20px; display:none;" />
                    <button class="btn btn-primary" onclick="addNewTask();"><i class="fa fa-plus"></i> Add Task</button>
                    <button class="btn btn-danger" onclick="$('#taskModal').modal('hide');"><i class="fa fa-times"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section pagespecific{
    <script src="~/scripts/plugin/ddslick/jquery.ddslick.min.js"></script>

    <script type="text/javascript">
    //Global variables
    var $freqSlider = $('#frequencySlider');
    var frequencyVal = 0;
    var pictureId = @ViewBag.picture;

    function addNewTask()
    {
        var allTasks = $('#taskSelect').val();
        var assetClassId = window.location.pathname.toString().split("/",5)[3];
        $.each(allTasks, function(i,v){
            var maintenanceId = allTasks[i];
            var frequencyId = frequencyVal;
            var validationIds = $('#validationSelect').val();
            var url = "../../assetclass/insertMaintenanceTask?assetClassId=" + assetClassId + "&maintenanceId=" + maintenanceId +"&frequencyId=" + frequencyId;
            $.each(validationIds, function(i,v){
                url += "&validationIds=" + v;
            });

            $.ajax({
                url: url,
                data: $('<form>@Html.AntiForgeryToken()</form>').serialize(),
                type: "POST",
                dataType: "json",
                success: function (json) {
                    $('#taskModal').modal('hide');
                    getAssosiatedTasks();
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Tasks",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                }
                });
            });
        }

        function getAssosiatedTasks()
        {
            $('#adbloader4').fadeIn(500);
            var assetClassId = window.location.pathname.toString().split("/",5)[3];
            $.ajax({
                url: "../../assetclass/getAssosiatedMaintenanceTasks?assetClassId=" + assetClassId,
                type: "POST",
                dataType: "json",
                success: function (json) {
                    console.log(json);
                    html = "";
                    $.each(json, function(i,v){
                        html += '<tr><td>' + json[i].maintenanceTask + '</td><td>' + json[i].frequency + '</td><td>';
                        $.each(json[i].validation, function(index, value){
                            if (index === 0)
                                html += json[i].validation[index].description;
                            else
                                html += ', ' +  json[i].validation[index].description;
                        });
                        html += '</td><td><a href="#" onclick="removeAssosiatedTask(' + json[i].maintenanceId + ')"><i class="fa fa-times txt-color-red"></i> Remove</a></td></tr>'
                    });

                    $('#dt_maintenanceTasks tbody').html(html);

                    $('#adbloader4').fadeOut(500);
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Assosiated Tasks",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                    $('#adbloader4').fadeOut(500);
                }
            });
        }

        function removeAssosiatedTask(id)
        {
            $('#adbloader4').fadeIn(500);
            $.ajax({
                url: "../../assetclass/removeTaskAssosiation?maintenanceId=" + id,
                type: "POST",
                dataType: "json",
                data: $('<form>@Html.AntiForgeryToken()</form>').serialize(),
                success: function (json) {
                    $.smallBox({
                        title: "Assosiation Removed",
                        content: "Asset Class Assosiation with task removed",
                        color: "#5384AF",
                        timeout: 4000,
                        icon: "fa fa-thumbs-up"
                    });
                    getAssosiatedTasks()
                    $('#adbloader4').fadeOut(500);
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Tasks",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                    $('#adbloader4').fadeOut(500);
                }
            });
        }

        function getValidators()
        {
            $.ajax({
                url: "../../assetclass/getAllMaintenanceValidators",
                type: "POST",
                dataType: "json",
                success: function (json) {
                    var html = "";
                    $.each(json, function (i, v) {
                        html += '<option value="' + json[i].i_maintenanceValidationId + '">' + json[i].vc_validationName + '</option>';
                    });

                    $('#validationSelect').html(html);
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Tasks",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                }
            });
        }

        function getAllMaintenanceTasks()
        {
            $.ajax({
                url: "../../assetclass/getAllMaintenanceTasks",
                type: "POST",
                dataType: "json",
                success: function (json) {
                    var html = "";
                    $.each(json, function (i, v) {
                        html = '<option value="' + json[i].i_maintenanceId + '">' + json[i].vc_description + '</option>';
                        $('#optgrp_' + json[i].i_maintenanceCategoryId).append(html);
                    });
                    getValidators();
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Tasks",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                }
            });
        }

        $(document).ready(function () {

            //Catch Click event for task modal
            $(document).on('click', '#addTaskBtn', function () {
                $('#taskModal').modal('show');
            });

            getAssosiatedTasks();

            //Get All Tasks and Categories
            $.ajax({
                url: "../../assetclass/getAllMaintenanceCategories",
                type: "POST",
                dataType: "json",
                success: function (json) {
                    var html = "";
                    $.each(json, function (i, v) {
                        html += '<optgroup label="' + json[i].vc_maintenanceCategory + '" id="optgrp_' + json[i].i_maintenanceCategoryId + '"></optgroup>';
                    });

                    $('#taskSelect').html(html);
                    getAllMaintenanceTasks();
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Categories",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                }
            });

            //Get Available Pictures from Library
            $.ajax({
                url: "../../assetclass/getPictures",
                type: "POST",
                dataType: "json",
                success: function (json) {
                    var index = -1;

                    $.each(json, function(i,v){
                        if(v.value === pictureId)
                        {
                            index = i;
                        }
                    });

                    $('#assetPic').ddslick({
                        data: json,
                        width: 300,
                        height: 500,
                        imagePosition: "left",
                        selectText: "Select Picture",
                    });

                    $('#assetPic').ddslick('select', {index:index});

                    $('#adbloader').fadeOut(500);
                },
                error: function (err) {
                    $.smallBox({
                        title: "Error Retrieving Pictures",
                        content: err.responseText,
                        color: "#f51414",
                        timeout: 5000,
                        icon: "fa fa-bell swing animated"
                    });
                    $('#adbloader').fadeOut(300);
                    $('#assetPic').fadeIn(500);
                }
            });

            //Get available frequencies
            $.ajax({
                url: "../../assetclass/getFrequencies",
                type: "POST",
                dataType: "json",
                success: function (json) {
                    var min = 0;
                    var max = 0;
                    var last = 0;
                    $.each(json, function (i, v) {
                        if (i === 0)
                        {
                            min = v.frequency;
                            max = v.frequency;
                        } else
                        {
                            if (min > v.frequency) min = v.frequency;
                            if (max < v.frequency) max = v.frequency;
                        }
                    });

                    last = @ViewBag.frequency;
                frequencyVal = @ViewBag.frequency;

                $freqSlider.slider({
                    value: last,
                    min: min,
                    max: max,
                    step: 15
                })

                $('#adbloader2').fadeOut(300);
                $('#frequencyLbl').html('<i class="fa fa-history"></i> Maintenance Frequency (' + last + ' days)');
            },
            error: function (err) {
                $.smallBox({
                    title: "Error Retrieving Frequencies",
                    content: err.responseText,
                    color: "#f51414",
                    timeout: 5000,
                    icon: "fa fa-bell swing animated"
                });
                $('#adbloader2').fadeOut(300);
                $('#frenquencySlider').fadeIn(500);
            }
        });

        //Listen for slide event
        $freqSlider.on( "slide", function( ui ) {
            $('#frequencyLbl').html('<i class="fa fa-history"></i> Maintenance Frequency (' + ui.value + ' days)');
            frequencyVal = ui.value;
        });

        //Listen for click event
        $('#createBtn').on('click', function () {
            createAssetClass();
        });

        //Listen for click event on back button
        $('#backBtn').on('click', function () {
            window.history.back();
        });
    });

    function createAssetClass(e)
    {
        $('#adbloader3').fadeIn(300);
        var flag = true;
        var assetPic = $('.dd-selected-value').val();
        var description = $('#description').val();
        var manufacturer = $('#manufacturer').val();
        var model = $('#model').val();

        if (assetPic === "" && flag) {
            $.smallBox({
                title: "No Picture Selected",
                content: "Please select a picture",
                color: "#f51414",
                timeout: 5000,
                icon: "fa fa-bell swing animated"
            });
            flag = false;
        }

        if (description === "" && flag)
        {
            $.smallBox({
                title: "No Description",
                content: "Please enter a description",
                color: "#f51414",
                timeout: 5000,
                icon: "fa fa-bell swing animated"
            });
            flag = false;
        }

        if (manufacturer === "" && flag) {
            $.smallBox({
                title: "No Manufacturer",
                content: "Please enter a manufacturer",
                color: "#f51414",
                timeout: 5000,
                icon: "fa fa-bell swing animated"
            });
            flag = false;
        }

        if (model === "" && flag) {
            $.smallBox({
                title: "No Model",
                content: "Please enter a model",
                color: "#f51414",
                timeout: 5000,
                icon: "fa fa-bell swing animated"
            });
            flag = false;
        }

        if (flag) {
            $.SmartMessageBox({
                title: '<i class="fa fa-pencil-square-o fa-lg txt-color-blue"></i> Edit Asset Class?',
                content: "Do you want to edit " + description + " (" + model + "). Continue?",
                buttons: '[No][Yes]'
            }, function (ButtonPressed) {

                if (ButtonPressed === "Yes") {
                    //URL For Call
                    var url = "../../assetclass/insertUpdateAssetClass?description=" + description + "&manufacturer=" + manufacturer + "&model=" + model + "&pictureId=" + assetPic + "&frequency=" + frequencyVal + "&assetClassId=@ViewBag.assetClassId";

                    $.ajax({
                        url: url,
                        type: "POST",
                        dataType: "json",
                        data: $('<form>@Html.AntiForgeryToken()</form>').serialize(),
                        success: function (json) {
                            $.smallBox({
                                title: "Asset Class was edited.",
                                content: json,
                                color: "#5384AF",
                                timeout: 4000,
                                icon: "fa fa-thumbs-up"
                            });
                            $('#adbloader3').fadeOut(300);
                        },
                        error: function (err) {
                            $.smallBox({
                                title: "Error Editing the Asset Class",
                                content: err.responseText,
                                color: "#f51414",
                                timeout: 5000,
                                icon: "fa fa-bell swing animated"
                            });
                            $('#adbloader3').fadeOut(300);
                        }
                    });
                }
                if (ButtonPressed === "No") {
                    $('#adbloader3').fadeOut(300);
                }
            });
        } else {
            $('#adbloader3').fadeOut(300);
        }
    }
    </script>
}