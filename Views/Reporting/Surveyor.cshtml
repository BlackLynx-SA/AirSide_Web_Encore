    </script>

    <script src="~/Scripts/plugin/PDF.js/pdf.js"></script>
    <script src="~/Scripts/plugin/PDF.js/pdf.worker.js"></script>
    <script src="~/Scripts/TypeScripts/Reporting/SurveyorReport.js"></script>
    <script src="~/Scripts/TypeScripts/Components/ComponentsHelper.js"></script>
}